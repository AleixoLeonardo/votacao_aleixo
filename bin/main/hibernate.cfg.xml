<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">
    jdbc:mysql://localhost:3306/votacao_aleixo</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">Aleixo@123</property>
<!--     <property name="hibernate.connection.password">fatec</property> -->
    <property name="hibernate.connection.pool_size">10</property>
    <property name="show_sql">true</property>
    <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.hbm2ddl.auto">update</property>
      <mapping class="br.com.votacao_aleixo.DTO.LogAlteracao"/>   
      <mapping class="br.com.votacao_aleixo.DTO.Municipio"/>
      <mapping class="br.com.votacao_aleixo.DTO.Secao"/>
      <mapping class="br.com.votacao_aleixo.DTO.TipoAlteracao"/>
      <mapping class="br.com.votacao_aleixo.DTO.TipoUsuario"/>
      <mapping class="br.com.votacao_aleixo.DTO.Uf"/>
      <mapping class="br.com.votacao_aleixo.DTO.Usuario"/>
      <mapping class="br.com.votacao_aleixo.DTO.Voto"/>
      <mapping class="br.com.votacao_aleixo.DTO.Zona"/>
      
      
   </session-factory>
</hibernate-configuration>